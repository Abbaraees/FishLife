#:kivy 1.0

<Fish>:
    Image:
        id: fishy
        source: "images/fish.png"
        texture: self.texture    

<FishLifeBones>:
    fish: fishy
    
    welcome_screen: welcome_screen
    game_screen: game_screen
    
    waves: waves
    
    Widget:
        id: welcome_screen
    
        Button:
            text: "Feed the fish!"
            center: root.center_x, self.height / 2
            on_release: root.scene_gameplay()
   
    Widget:
        id: game_screen
        
        GridLayout:
            cols: 2
            row_force_default: True
            row_default_height: 100
            width: Window.width
            height: 100
            pos: (0,0)
            
            Label:
                text: "Starvation Meter"
                width: 100
            
            ProgressBar:
                max: 1000
                value: 1000
                
        Widget:
            id: game_area
            
            canvas:
                Color(1,1,1)
                Rectangle:
                    source: "images/bg.png"
                    pos: self.pos:
                    size: self.size
                    
        Image:
            id: waves
            source: "images/waves.png"
            pos: (0, game_screen.top - 182)
            size: (game_screen.width, 28)
            
    Widget:
        id: victory_screen
        
        Button:
            text: "AGAIN!"
            on_press: root.restart_game() 
            on_press: self.dismiss()
            
    

