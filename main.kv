#:kivy 1.0
        
    
<FishLifeGame>:
    horison: 200
    
    game_screen: game_screen
    
    game_area: game_area
    waves: waves
    
    calories_bar: calories_bar
    
    Widget:
        id: game_screen
        size: root.size
        
        Widget:
            id: game_area
            size: root.size
            
            canvas:
                Color:
                    rgb: (1,1,1)
                Rectangle:
                    source: "images/bg.png"
                    size: root.size
        Image:
            id: waves
            source: "images/waves.png"
            size: (game_screen.width, 28)
            center: (game_screen.width/2, game_screen.top - root.horison + self.height)
            
        GridLayout:
            cols: 3
            row_force_default: True
            row_default_height: 100
            width: root.width
            height: 70
            pos: (0,0)
            
            Label:
                text: "Starvation Meter"
                color: [0,0,0,1]
                width: 100
            
            ProgressBar:
                id: calories_bar
                max: 1000
                value: 1000            
                
            Widget:
                width:30
            
<FishLifeScore>:
    restart_btn: restart_btn
    
    score_table: score_table
    calories_score: calories_score
    junk_score: junk_score
    total_score: total_score
    
    title: "Victory!"
    auto_dismiss: False
    size_hint: (None, None)
    size: (400,400)
    pos: self.pos
    
    
    GridLayout:
        id: score_table
        cols: 2
        size_hint: (1.0, None)
        height:100
        pos: (root.x, root.height - self.height/2)

        Label:
            text: "Total Calories Consumed"
        Label:
            text: "Tons of Junk swallowed"
            
        Label:
            id: calories_score
            font_size: 20
            text: "0"
        Label:
            id: junk_score
            font_size: 20
            text: "0"       
    Label:
        id: total_score
        pos: root.pos
        text_size: (self.width - 20, None)
        text: "In total fishy made 0 people happy during life. :("
                
    Button:
        id: restart_btn
        text: "AGAIN!"
        pos: root.pos
        size_hint: (None, None)
        size: (root.width, 30)

<FoodScoreFeedback>:
    font_size: 20
    font_name: "DejaVuSansMono-Bold.ttf"

